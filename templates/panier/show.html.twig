{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ panier.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ panier.createdAt ? panier.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ panier.etat ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>


    <div class="card-body d-flex justify-content-between">
        <a href="{{ path('panier_edit', {'id': panier.id}) }}"><button type="button" class="btn btn-success text-center">Editer</button></a>             
        <a href="{{ path('panier_index') }}"><button type="button" class="btn btn-secondary text-center">Retour</button></a>
    </div>    

    {{ include('panier/_delete_form.html.twig') }}
{% endblock %}
{% block review %}
<section class="container section-title">
    
    <h5>Autres produits </h5>
       
</section>
{% endblock %}
