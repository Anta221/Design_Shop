{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}
{% block slide %}
<section class="hero-section">
    <div class="hero-slider owl-carousel">
        <div class="hero-slide-item set-bg" data-setbg="{{asset("img/vinicius-amnx-amano-ALpEkP29Eys-unsplash.jpg")}}">
            <div class="hs-text">
                <h2 class="hs-title-1"><span>Nos</span></h2>
                <h2 class="hs-title-2"><span>Produits</span></h2>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block body %}
<br><br>
<div class="container">
    <h5>Nos produits</h5>
    <!-- Recipes section -->
   



    
    <section class="recipes-section spad pt-0">
        <br> <br>
        <div class="container">
            <div class="row">
            {% for produit in produits %}       
            <div class="col-lg-4 col-md-6">
                <div class="recipe">
                    <img src="{{ asset("uploads/" ~ produit.photo )}}" alt="">
                    <div class="recipe-info-warp">
                        <div class="recipe-info">
                            <h3>{{produit.nom}}</h3>
                            <a href="{{ path('produit_show', {'id': produit.id}) }}"><button type="button" class="btn btn-info text-center">Voir</button></a>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED" and is_granted('ROLE_ADMIN')) %}
                                <a href="{{ path('produit_edit', {'id': produit.id}) }}"><button type="button" class="btn btn-warning text-center">Editer</button></a>             
                            {% endif %}  
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
            
               
        {% else %}
          <p>Aucun produit</p>  
        {% endfor %}
   
    <div class="card-body d-flex justify-content-between">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED" and is_granted('ROLE_ADMIN')) %}
            <a href="{{ path('produit_new') }}"><button type="button" class="btn btn-success text-center">Nouveau produit</button></a>             
        {% endif %}
        <a href="{{ path('home') }}"><button type="button" class="btn btn-secondary text-center">Retour</button></a>
    </div>     
</div>
{% endblock %}
{% block review %}
<section class="container section-title">
    
    <p>Autres produits </p>
       
</section>
{% endblock %}
