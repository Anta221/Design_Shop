

{% extends 'base.html.twig' %}

{% block title %}Contenu du panier{% endblock %}
{% block slide %}
<section class="hero-section">
    <div class="hero-slider owl-carousel">
        <div class="hero-slide-item set-bg" data-setbg="{{asset("img/annie-spratt-P43nxvIHnag-unsplash.jpg")}}">
            <div class="hs-text">
                <h2 class="hs-title-1"><span>Contenu </span></h2>
                <h2 class="hs-title-2"><span>du panier</span></h2>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block body %}
    <br>
    <br>
    <div class="container">
        <br>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean ipsum massa</p>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contenu_panier in contenu_paniers %}
            <tr>
                <td>{{ contenu_panier.id }}</td>
                <td>{{ contenu_panier.quantite }}</td>
                <td>{{ contenu_panier.createdAt ? contenu_panier.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('contenu_panier_show', {'id': contenu_panier.id}) }}">show</a>
                    <a href="{{ path('contenu_panier_edit', {'id': contenu_panier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Votre panier ne contient aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="card-body d-flex justify-content-between">
        <a href="{{ path('contenu_panier_new') }}"><button type="button" class="btn text-center">Ajouter un produit</button></a> 
        <a href="#"><button type="button" class="btn btn-info text-center">Valider</button></a> 
        <br><br>
    </div>
</div>
<br><br>
<br><br>
{% endblock %}
{% block review %}
<section class="container section-title">
    
    <h5>Autres produits </h5>
       
</section>
{% endblock %}
