{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block slide %}{% endblock %}
{% block body %}

<div class="container my-5">
    <h1 class="display-4">Connexion</h1>
    {% if hasError == true %}

        <div class="alert alert-danger" role="alert">
                       
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            Adresse email et/ou mot de passe invalide !
        </div>

    {% endif %}
    <form action="" method="post" class="user">
        <small class="mb-3"><sup>*</sup>champs obligatoires</small>
        <div class="form-group">
            <label for="email">Adresse emal<sup>*</sup></label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="_username" placeholder="saisir votre adresse email" required>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe<sup>*</sup></label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="saisir votre mot de passe" required>
        </div>
        <button type="submit" class="btn btn-dark">Valider</button>           
    </form>
    
    <p class="mt-4"><a href="{{ path('user_new') }}"> <i class="fas fa-arrow-right"></i> Cr√©er votre compte</a></p>
    
</div>

{% endblock %}
