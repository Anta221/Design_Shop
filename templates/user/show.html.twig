{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block slide %}{% endblock %}
{% block body %}
<div class="container my-5">
    <h1 class="display-4">Mon compte</h1>

    <table class="table">
        <tbody>
    
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-arrow-right"></i> Mettre à jour mes informations</a>
    <br><a href="{{ path('user_edit_password', {'id': user.id}) }}"><i class="fas fa-arrow-right"></i> Modifier mon mot de passe</a>
    <br><br><br><br>
    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
